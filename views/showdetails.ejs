<!DOCTYPE html>
<html>
  <head>
    <script src="https://kit.fontawesome.com/f04dd70b3c.js" crossorigin="anonymous"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h2>List of All Movies.</h2>
    <% data.forEach(function(user){ %>
        <h3><a href="/movie/moviedetails/<%= user._id %>"><%= user.Name %>  </a> </h3>
        <p><%= user.Story %></p>
        <p><%= user.Release %></p>
        <p><%= user.Director %></p>
        <p><%= user.Writers %></p>
        <p><%= user.Stars %></p>
        <p><%= user.Rating %></p>
      <% }); %>
    <form action="/movie/addmovie" method="get">
    <input  class="addmovie" type="submit" value="Add Movie">
    </form>
    <a href="/logout">logout</a>
  </body>
</html>